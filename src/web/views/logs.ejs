<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logs</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Bot Logs</h1>
    </header>
    <main>
        <section>
            <% Object.entries(logsByGuild).forEach(([guildName, logs]) => { %>
                <h2><%= guildName %> - Recent Logs</h2>
                <% if (logs.length === 0) { %>
                    <p>No logs for this server.</p>
                <% } else { %>
                    <ul>
                        <% logs.forEach(log => { %>
                            <li>
                                <strong><%= new Date(log.timestamp).toLocaleString() %></strong>:
                                <code><%= log.command %></code>
                                by <code><%= usernamesById[log.userId] || log.userId %></code>
                                <br>
                                Args: <%= JSON.stringify(log.args) %>
                                <br>
                                Response: <%= log.response %>
                            </li>
                        <% }); %>
                    </ul>
                <% } %>
            <% }); %>
        </section>
    </main>
    <footer>
        <p>&copy; 2025 Discord Bot Portal</p>
    </footer>
</body>
</html>